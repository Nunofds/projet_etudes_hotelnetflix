{% extends 'base.html.twig' %}

{% block title %}HotelNetflix | Ma réservation N° {{ booking.id }} {% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/user/edit.css') }}">
{% endblock %}

{% block body %}
<section class="container">
    <table class="table">
        <tbody>
            <tr>
                <th>Serie</th>
                <td>{{ booking.serie.name }}</td>
            </tr>

            <tr>
                <th>Package</th>
                <td>{{ booking.formule }}</td>
            </tr>
            <tr>
                <th>Check-in</th>
                <td>{{ booking.checkin ? booking.checkin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Check-out</th>
                <td>{{ booking.checkout ? booking.checkout|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>N° Personnes</th>
                <td>{{ booking.pax }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_booking_edit', {'id': booking.id}) }}" class="btn btn-primary mb-3">Editer</a>

    <a href="{{ path('app_reviews_new') }}" class="btn btn-success mb-3">Nouveau commentaire</a>

    <a href="{{ path('app_user_booking_index') }} " class="btn btn-secondary mb-3">Retour</a>

    {{ include('user/booking/_delete_form.html.twig') }}
</section>
{% endblock %}
