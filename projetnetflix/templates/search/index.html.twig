{% extends 'base.html.twig' %}

{#{% block title %}hello{% endblock %}#}

{% block body %}
    <div class="container">
        <h1 style="color:#fff">Résultat de la recherche : <i><code>{{ word }}</code></i></h1>

        {% for serie in series %}
        <div class="card" style="width: 18rem;">
            <img src="{{ asset('assets/images/img-serie/' ~ serie.imageSerie) }}" class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{ serie.name }}</h5>
                <a href="{{ path('app_hotel_show', {'id': serie.id}) }}" class="btn btn-danger w-100">découvrir hôtel</a>
            </div>
        {% else %}
            <h3 class="alert alert-danger">Aucun résultat trouvé !</h3>
        {% endfor %}
        </div>
    </div>
{% endblock %}
