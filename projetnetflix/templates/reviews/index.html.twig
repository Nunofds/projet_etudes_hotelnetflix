{% extends 'base.html.twig' %}

{% block title %} HotelNetflix | Mes commentaires{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/reviews/index.css') }}">
{% endblock %}

{% block body %}
    <section id="cacher" class="container my-5">
            <table class="table" >
                <thead>
                    <tr>
                        <th class="text-start">Commentaire</th>
                        <th class="text-start">Serie</th>
                        <th class="text-start">Action</th>
                    </tr>
                </thead>
                <tbody>
                {% for review in reviews %}
                    <tr>
                        <td class="text-start">{{ review.comment }}</td>
                        <td class="text-start">{{ review.serie.name }}</td>
                        <td class="text-start">
                            <a href="{{ path('app_reviews_show', {'id': review.id}) }}" class="btn btn-primary mb-3">Voir</a>
                            <a href="{{ path('app_reviews_edit', {'id': review.id}) }}" class="btn btn-success mb-3">Editer</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3">Aucun résultat trouvé !</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

        <a href="{{ path('app_reviews_new') }}" class="btn-add-comment btn btn-success mb-5 new-comment">Nouveau Commentaire</a>
        <a href="{{ path('user') }}" class="btn-retour-comment btn btn-secondary go-back">Retour</a>
    </section>

    <section id="afficher" class="container my-5">
        <div class="title">
            {% for review in reviews %}
                <h5 class="text-center">Commentaire serie : <i>{{ review.serie.name }}</i></h5>
                <p>{{ review.comment }}</p>
                <div class="bock-btn">
                    <a href="{{ path('app_reviews_show', {'id': review.id}) }}" class="btn btn-primary mb-3 d-block w-100">Voir</a>
                    <a href="{{ path('app_reviews_edit', {'id': review.id}) }}" class="btn btn-warning mb-3 d-block w-100">Editer</a>
                </div>
                <hr>
            {% else %}
                <p colspan="3">Aucun résultat trouvé !</p>
            {% endfor %}
        </div>
        <div class="bock-btn-block mt-5">
            <a href="{{ path('app_reviews_new') }}" class="btn btn-light new-comment">Nouveau Commentaire</a>
            <a href="{{ path('user') }}" class="btn btn-light go-back">Retour</a>
        </div>
    </section>

{% endblock %}
