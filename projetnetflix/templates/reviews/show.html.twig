{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/reviews/all-comments.css') }}">
{% endblock %}

{% block title %} HotelNetflix | Tous mes commentaires{% endblock %}

{% block body %}
    <section class="container">
        <div class="mb-3">
            <h5>Mon commentaire :</h5>
            <p class="my-5">{{ review.comment }}</p>
        </div>

        <a href="{{ path('app_reviews_index') }}" class="btn btn-secondary mb-3">Retour</a>

        <a href="{{ path('app_reviews_edit', {'id': review.id}) }}" class="btn btn-primary mb-3">Editer</a>

        {{ include('reviews/_delete_form.html.twig') }}
    </section>

{% endblock %}

